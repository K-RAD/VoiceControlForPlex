<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_horizontal">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="doRewind"
        android:id="@+id/rewindButton" android:src="@drawable/button_rewind"
        android:paddingLeft="5sp" android:paddingRight="5sp" android:paddingTop="5sp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="doPlayPause"
        android:id="@+id/playPauseButton" android:src="@drawable/button_play"
        android:paddingLeft="5sp" android:paddingRight="5sp" android:paddingTop="5sp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="doStop"
        android:id="@+id/stopButton" android:src="@drawable/button_stop" android:paddingLeft="5sp"
        android:paddingRight="5sp" android:paddingTop="5sp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="doForward"
        android:id="@+id/forwardButton" android:src="@drawable/button_forward"
        android:paddingLeft="5sp" android:paddingRight="5sp" android:paddingTop="5sp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="doMic"
        android:id="@+id/micButton" android:src="@drawable/button_microphone"
        android:paddingLeft="5sp" android:paddingRight="5sp" android:paddingTop="5sp"/>
</LinearLayout>