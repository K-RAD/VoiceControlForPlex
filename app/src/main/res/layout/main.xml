<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:textColor="@color/white"
    android:orientation="vertical" >

	<ListView
        android:id="@+id/listView1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/listView1"
        android:gravity="center">

        <CheckBox
            android:id="@+id/resumeCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resumeChecked"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/listView1"
            android:text="@string/resume_if_in_progress"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/helpUsageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resumeCheckbox"
            android:onClick="showUsageExamples"
            android:layout_centerInParent="true"
            android:text="@string/help_usage_button" />

        <TextView
            android:id="@+id/invalidGoogleSearchHeader"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="10sp"
            android:text="@string/google_search_incompatibility"
            android:visibility="gone"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/invalidGoogleSearchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="@string/google_search_invalid_version"
            android:visibility="invisible"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
